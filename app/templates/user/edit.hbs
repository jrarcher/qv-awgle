<div class="panel panel-primary">
    <div class="panel-heading">
        <div class="row">
            <div class="col-sm-10">
                <h3 class="panel-title form-control-static">Edit User - {{username}} - {{model.isDirty}}</h3>
            </div>
            <div class="col-sm-2">
                <div class="btn btn-danger btn-sm pull-right" title="Cancel" {{action 'cancel'}}>
                    <i class="fa fa-times"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="alert alert-warning" role="alert" id="editUserExit">
                    <div class="row">
                        <div class="col-md-11">
                            <p class="text-right form-control-static">Are you sure you want to exit?</p>
                        </div>
                        <div class="col-md-1">
                            <span class="pull-right">
                            <button type="button" class="btn btn-danger" {{action "closePage"}}>Yes</button>
                            <button type="button" class="btn btn-success" {{action "cancelClose"}}>No</button>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <!-- COLUMN 1 -->
            <div class="col-md-6">
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <h3 class="panel-title">General</h3>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-6">
                                <label class="control-label sr-only">Gender</label>
                                <div {{bind-attr class=":form-group :has-feedback genderIsValid:has-success:has-error"}}>
                                    {{view Ember.Select class="form-control"
                                    content=genders
                                    value=gender
                                    optionValuePath="content.val"
                                    optionLabelPath="content.key"
                                    }}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div {{!bind-attr class=":form-group :has-feedback birthIsValid:has-success:has-error"}}>
                                    {{date-picker action="updateBirth" theValue=prettyBirth}}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- END GENERAL -->
                <!-- NAME -->
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <h4 class="panel-title">Name (optional)</h4>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-2">
                                <div class="form-group">
                                    {{view Ember.Select class="form-control"
                                    content=prefixes
                                    prompt="Prefix"
                                    value=name.prefix
                                    optionValuePath="content.val"
                                    optionLabelPath="content.key"
                                    }}
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    {{input type="text" class="form-control" placeholder="First" value=name.first}}
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    {{input type="text" class="form-control" placeholder="Middle" value=name.middle}}
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    {{input type="text" class="form-control" placeholder="Last" value=name.last}}
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    {{view Ember.Select class="form-control"
                                    content=suffixes
                                    value=name.suffix
                                    prompt="Suffix"
                                    optionValuePath="content.val"
                                    optionLabelPath="content.key"
                                    }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- END NAME -->
                <!-- ADDRESS -->
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <h3 class="panel-title">Address (optional)</h3>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                <div class="form-group">
                                    {{input type="text" class="form-control" value=address.street1 placeholder="Street1"}}
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                <div class="form-group">
                                    {{input type="text" class="form-control" value=address.street2 placeholder="Street2"}}
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                                <div class="form-group">
                                    {{input type="text" class="form-control" value=address.city placeholder="City"}}
                                </div>
                            </div>
                            <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                                <div class="form-group">
                                    {{view Ember.Select class="form-control"
                                    content=states
                                    prompt="State"
                                    value=address.state
                                    optionValuePath="content.val"
                                    optionLabelPath="content.key"
                                    }}
                                </div>
                            </div>
                            <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                                <div class="form-group">
                                    {{input type="text" class="form-control" value=address.zip placeholder="Zip"}}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- END ADDRESS -->
            </div>
            <!-- COLUMN 2 -->
            <div class="col-md-6">
                <!-- RIGHTS -->
                <div class="panel panel-info">
                    <!-- Default panel contents -->
                    <div class="panel-heading">
                        <h3 class="panel-title">Rights</h3>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="panel panel-success">
                                    <div class="panel-heading">
                                        <span class="h5">User</span>
                                        <div class="btn-group btn-group-xs pull-right">
                                            <div class="btn btn-danger"
                                                {{action "toggleRights" "user" false}} title="Disable All">
                                                <i class="fa fa-times-circle-o fa-lg"></i>
                                            </div>
                                            <div class="btn btn-success"
                                                {{action "toggleRights" "user" true}} title="Enable All">
                                                <i class="fa fa-check-square-o fa-lg"></i>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="panel-body">
                                        <div class="row">
                                            <div class="col-md-12 switch-holder">
                                                {{bs-switch labelText="View" onState=canViewUser action="changeState" name="canViewUser"}}
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12 switch-holder">
                                                {{bs-switch labelText="Edit" onState=canEditUser action="changeState" name="canEditUser"}}
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12 switch-holder">
                                                {{bs-switch labelText="Delete" onState=canDeleteUser action="changeState" name="canDeleteUser"}}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="panel panel-success">
                                    <div class="panel-heading">
                                        <span class="h5">Company</span>
                                        <div class="btn-group btn-group-xs pull-right">
                                            <div class="btn btn-danger"
                                                {{action "toggleRights" "company" false}} title="Disable All">
                                                <i class="fa fa-times-circle-o fa-lg"></i>
                                            </div>
                                            <div class="btn btn-success"
                                                {{action "toggleRights" "company" true}} title="Enable All">
                                                <i class="fa fa-check-square-o fa-lg"></i>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="panel-body">
                                        <div class="row">
                                            <div class="col-md-12 switch-holder">
                                                {{bs-switch labelText="View" onState=canViewCompany action="changeState" name="canViewCompany"}}
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12 switch-holder">
                                                {{bs-switch labelText="Edit" onState=canEditCompany action="changeState" name="canEditCompany"}}
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12 switch-holder">
                                                {{bs-switch labelText="Delete" onState=canDeleteCompany action="changeState" name="canDeleteCompany"}}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="panel panel-success">
                                    <div class="panel-heading">
                                        <span class="h5">Survey</span>
                                        <div class="btn-group btn-group-xs pull-right">
                                            <div class="btn btn-danger"
                                                {{action "toggleRights" "survey" false}} title="Disable All">
                                                <i class="fa fa-times-circle-o fa-lg"></i>
                                            </div>
                                            <div class="btn btn-success"
                                                {{action "toggleRights" "survey" true}} title="Enable All">
                                                <i class="fa fa-check-square-o fa-lg"></i>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="panel-body">
                                        <div class="row">
                                            <div class="col-md-12 switch-holder">
                                                {{bs-switch labelText="View" onState=canViewSurvey action="changeState" name="canViewSurvey"}}
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12 switch-holder">
                                                {{bs-switch labelText="Edit" onState=canEditSurvey action="changeState" name="canEditSurvey"}}
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12 switch-holder">
                                                {{bs-switch labelText="Delete" onState=canDeleteSurvey action="changeState" name="canDeleteSurvey"}}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 switch-holder">
                                {{bs-switch labelText="is Admin" onState=isAdmin action="changeState" name="isAdmin"}}
                            </div>
                            <div class="col-md-6 switch-holder">
                                {{bs-switch labelText="make Admin"
                                onState=canMakeAdmin
                                action="changeState"
                                name="canMakeAdmin"
                                }}
                            </div>
                        </div>
                    </div>
                </div>
                <!-- END RIGHTS -->
            </div>
        </div>
        <div class="row">
            <div class="col-md-10">
                {{#if errorMessage}}
                <div class="alert alert-danger alert-dismissible" role="alert">
                    <button type="button" class="close" {{action "dismissAlert"}}><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    <span class="h4">{{errorMessage}}</span>
                </div>
                {{/if}}
            </div>
            <div class="col-md-2">
                <div {{bind-attr class=":btn :btn-success :btn-block isEdited::disabled"}} {{action "saveUser"}}>Save User</div>
            </div>
        </div>
    </div>
    <div class="row">
        Model: {{model.isDirty}}<br>
        Name: {{model.name.isDirty}}<br>
        Address: {{model.address.isDirty}}<br>
        Right: {{model.right.isDirty}}
    </div>
</div>